# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/climate_ai_db
REDIS_URL=redis://localhost:6379/0

# API Keys
OPENAI_API_KEY=your_openai_api_key_here
WEATHER_API_KEY=your_weather_api_key_here
NASA_API_KEY=your_nasa_api_key_here
NOAA_API_KEY=your_noaa_api_key_here
METEOSTAT_API_KEY=your_meteostat_api_key_here
SATELLITE_API_KEY=your_satellite_api_key_here
OPENWEATHER_API_KEY=your_openweather_api_key_here

# Security
SECRET_KEY=your_super_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Application Settings
APP_NAME=Climate AI Platform
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=climatecoach-global
AWS_REGION=us-east-1
S3_STORAGE_ENABLED=true

# External Services
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# GDPR Compliance
DATA_RETENTION_DAYS=365
ANONYMIZATION_ENABLED=true
AUDIT_LOG_ENABLED=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin123
REDIS_PASSWORD=redis123
POSTGRES_PASSWORD=postgres123

# AI/ML Configuration
OFFLINE_GPT_ENABLED=true
SENTIMENT_ANALYSIS_ENABLED=true
HABIT_DETECTION_ENABLED=true
SECURE_COMPUTATION_ENABLED=false

# Global Climate Features
GLOBAL_CLIMATE_ENABLED=true
REAL_TIME_ALERTS_ENABLED=true
CLIMATE_DATA_CACHE_TTL=3600
